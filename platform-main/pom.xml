<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>platform</artifactId>
        <groupId>com.taro</groupId>
        <version>1.0.1</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>platform-main</artifactId>

	<packaging>war</packaging>
	<dependencies>
		<dependency>
			<groupId>com.taro</groupId>
			<artifactId>platform-common</artifactId>
			<version>1.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.taro</groupId>
			<artifactId>platform-base</artifactId>
			<version>1.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.taro</groupId>
			<artifactId>platform-activiti</artifactId>
			<version>1.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.taro</groupId>
			<artifactId>platform-auth</artifactId>
			<version>1.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.taro</groupId>
			<artifactId>platform-file-manage</artifactId>
			<version>1.0.1</version>
		</dependency>
		<!--外置tomcat启动-->
		<!--<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-tomcat</artifactId>
			<scope>provided</scope>
		</dependency>-->
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<fork>true</fork> <!-- 如果没有该配置，devtools不会生效 -->
					<jvmArguments>-Dfile.encoding=UTF-8</jvmArguments>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>${maven_war_plugin_version}</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
		</plugins>
		<!--注意此次必须要放在此目录下才能被访问到 -->
		<resources>
			<resource>
				<directory>src/main/webapp</directory>
				<targetPath>META-INF/resources</targetPath>
				<includes>
					<include>**/**</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
		</resources>
	</build>
</project>